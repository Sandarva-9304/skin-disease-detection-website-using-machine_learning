{
  "version": 2,
  "name": "ml-server",
  "devCommand": "gunicorn app:app --host 0.0.0.0 --port 3000",
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": { "runtime": "python-3.12", "maxLambdaSize": "50mb" }
    }
  ],
  "routes": [
    {
      "src": "/predict",
      "dest": "/api/app.py"
    }
  ]
}
